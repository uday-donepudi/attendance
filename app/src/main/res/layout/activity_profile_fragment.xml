<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">


    <ImageView
        android:id="@+id/teacherImageView"
        android:layout_width="116dp"
        android:layout_height="118dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp" />

    <EditText
        android:id="@+id/teacherNameEditText"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/teacherImageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="160dp"
        android:ellipsize="middle"
        android:text="Name:"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/teacherSubjectEditText"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacherNameEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Subject: "
        android:textSize="20sp" />

    <EditText
        android:id="@+id/teacherEmailEditText"
        android:layout_width="324dp"
        android:layout_height="48dp"
        android:layout_below="@+id/teacherSubjectEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"

        android:text="Email: "
        android:textSize="16sp" />

    <EditText
        android:id="@+id/teacherPhoneEditText"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacherEmailEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Phone: "
        android:textSize="20sp" />

    <EditText
        android:id="@+id/teacherAddressEditText"
        android:layout_width="390dp"
        android:layout_height="90dp"
        android:layout_below="@+id/teacherPhoneEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Subject Taughs:"
        android:textSize="20sp" />


    <Button
        android:id="@+id/saveButton"
        android:layout_width="102dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="180dp"
        android:layout_marginEnd="1dp"
        android:text="Edit"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="373dp"
        android:layout_height="73dp"
        android:layout_below="@+id/teacherAddressEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="9dp"
        android:text="Add any thing:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="210dp"
        android:layout_height="129dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Bio" />

    <Button
        android:id="@+id/Editbutton"
        android:layout_width="111dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="581dp"
        android:layout_marginEnd="0dp"
        android:text="Save"
        android:textSize="20sp" />


</androidx.constraintlayout.widget.ConstraintLayout>